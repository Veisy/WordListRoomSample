#!/bin/sh
#
#Run lint checks before push.

# Perform lint debug check

echo "Checking debug built ..."
./gradlew lintDebug
lintDebugStatus=$?

if [ $lintDebugStatus -ne 0 ]
then
  echo "lintDebug built failure, git push aborted."
  exit 1
  
else
	echo "Checking release built ..."
	./gradlew lintRelease
	lintRealeseStatus=$?
	
	if [ $lintRealeseStatus -ne 0 ]
	then
		echo "lintRelease built failure, git push aborted."
		exit 1
	fi
  
fi

