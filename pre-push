#!/bin/sh
#
#Check build variants before push.

echo "Checking debug built ..."
#./gradlew :app:lintDebug
./gradlew :app:compileDebugSources
debugStatus=$?

if [ $debugStatus -ne 0 ]
then
  echo "compileDebugSources built failure, git push aborted."
  exit 1
  
else
	echo "Checking release built ..."
	#./gradlew :app:lintRelease
	./gradlew :app:compileReleaseSources
	realeseStatus=$?
	
	if [ $realeseStatus -ne 0 ]
	then
		echo "compileReleaseSources built failure, git push aborted."
		exit 1
	fi
  
fi

